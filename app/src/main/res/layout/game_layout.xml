<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/electrolize"
                android:text="Joeur 1: "
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/electrolize"
                android:text="nomPlayer1"
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_weight="1"
                android:foreground="@drawable/x" />

            <TextView
                android:id="@+id/PontPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/electrolize"
                android:text="00"
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/electrolize"
                android:text="Joeur 2:  "
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/electrolize"
                android:text="nomPlayer1"
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_weight="1"
                android:foreground="@drawable/o" />

            <TextView
                android:id="@+id/PontPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/electrolize"
                android:text="00"
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridview1"
        android:layout_width="381dp"
        android:layout_height="408dp"
        android:layout_gravity="center|center_horizontal"
        android:background="@drawable/back_tableau"
        android:columnCount="3"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imgVi0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="0" />

        <ImageView
            android:id="@+id/imgVi1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="1" />

        <ImageView
            android:id="@+id/imgVi2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="2" />

        <ImageView
            android:id="@+id/imgVi3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="3" />

        <ImageView
            android:id="@+id/imgVi4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="4" />

        <ImageView
            android:id="@+id/imgVi5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="5" />

        <ImageView
            android:id="@+id/imgVi6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="6" />

        <ImageView
            android:id="@+id/imgVi7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="7" />

        <ImageView
            android:id="@+id/imgVi8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="22dp"
            android:onClick="tapped"
            android:tag="8" />
    </GridLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginTop="620sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_lay"
                android:gravity="center|center_vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="MENU" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/resert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/button_lay"
                android:gravity="center|center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="RECOMMENCER" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80sp"
            android:fontFamily="@font/electrolize"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:paddingTop="50sp"
            android:paddingBottom="10sp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>